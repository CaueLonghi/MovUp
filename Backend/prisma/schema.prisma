generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  email         String        @unique
  nome          String
  birthday      DateTime
  senha         String
  fichaMedica   FichaMedica? 
}

model FichaMedica {
  id            Int           @id @default(autoincrement())
  peso          Float
  altura        Float
  sexo          String
  Fascite_plantar Boolean
  Fratura_inferior Boolean
  Tendinite Boolean
  Canelite Boolean
  Diabetes Boolean
  Colesterol Boolean
  Tempo_corrida Float

  userId        Int           @unique
  user          User          @relation(fields: [userId], references: [id])
}




